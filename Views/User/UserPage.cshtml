@model WOYM_Project_.Models.Post
@{
    ViewBag.Title = "HOME";
}
@{
    Layout = null;
}
<!DOCTYPE Html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>WOYM</title>
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-1.9.1.min.js"></script>
        <script src="~/Scripts/bootstrap.js"></script>
        <link href="~/Image/favicon.ico" rel="shortcut icon" type="image/x-icon">
    </head>
    <body>
        <nav class="navbar navbar-inverse" role="navigation">
            <div class="navbar-header">
                <img class="navbar-brand" src="~/Image/favicon.ico" />
                <h4 style="color:lightblue">What's on your Mind</h4>
            </div>
            <div>
                @using (Html.BeginForm("","User",FormMethod.Post,new {@class="navbar-form navbar-left",role="search"}))
                {
                  <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                  </div>
                  <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search" style="color:lightblue"></span></button>  
                }
                <ul class="nav navbar-nav pull-right nav-pills">
                    <li class="disabled"><a href="#" style="color:white"><b>@ViewBag.user.Name</b></a></li>
                    <li><a href="/User/Index">Home</a></li>
                    <li><a href="/Follow/Followered?UID="@ViewBag.user.Id>Follow</a></li>
                    <li ><a href="/Home/AboutUs">About Us</a></li>
                    <li>
                      <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">Options
                      <span class="caret" style="color:gray"></span>
                      </a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/User/EditProfile/?Email="@ViewBag.email>Edit Profile</a></li>
                            <li class="divider"></li>
                            <li><a href="/Home/Index">Log Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                @using (Html.BeginForm("AddPost", "User", FormMethod.Post))
                {
                    <div class="col-xs-2">
                        <a href="#" class="thumbnail">
                          <img data-src="holder.js/100%x180" src=@ViewBag.url alt="...">
                        </a>
                        @ViewBag.Name
                    </div>
                    <a href="#" type="button" id="follow">@ViewBag.Fol</a>
                    <br />
                    @{foreach (var q in Model)
                      {
                        <div class="col-xs-2">
                            <a href="#" class="thumbnail">
                              <img data-src="holder.js/100%x180" src=@ViewBag.url alt="...">
                            </a>
                            @ViewBag.Name
                        </div>
                        @q.Post1
                      }
                }
                }
            </div>
            <div class="col-md-3">
                <form action="/home/save" method="post" enctype="multipart/form-data" >
                   <input type="file" name="image" />
                   <button type="submit" class="btn btn-success">Upload Picture</button>
                </form>
            </div>
        </div>
        <script>
            $(document).ready(function ()
            {
                $('#follow').click(function () {
                    if( $(this).val() == "Follow")
                        $('#follow').prop('value', 'UnFollow');
                    else
                        $('#follow').prop('value', 'Follow');
                });
            });
        </script>
    </body>
</html>